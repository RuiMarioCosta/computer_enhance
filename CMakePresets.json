{
  "version": 3,
  "configurePresets": [
    {
      "name": "conf-common",
      "description": "General settings that apply to all configurations",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/out/build/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "CMAKE_VERBOSE_MAKEFILE": "ON"
      }
    },
    {
      "name": "compiler-gcc",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++"
      },
      "condition": {
        "type": "notEquals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "compiler-clang",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "clang",
        "CMAKE_CXX_COMPILER": "clang++"
      }
    },
    {
      "name": "compiler-msvc",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "cl",
        "CMAKE_CXX_COMPILER": "cl"
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      }
    },
    {
      "name": "buildtype-debug",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "DEBUG"
      }
    },
    {
      "name": "buildtype-release",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "RELEASE"
      }
    },
    {
      "name": "debug-gcc",
      "inherits": [
        "buildtype-debug",
        "compiler-gcc",
        "conf-common"
      ]
    },
    {
      "name": "debug-clang",
      "inherits": [
        "buildtype-debug",
        "compiler-clang",
        "conf-common"
      ]
    },
    {
      "name": "debug-msvc",
      "inherits": [
        "buildtype-debug",
        "compiler-msvc",
        "conf-common"
      ]
    },
    {
      "name": "release-gcc",
      "inherits": [
        "buildtype-release",
        "compiler-gcc",
        "conf-common"
      ]
    },
    {
      "name": "release-clang",
      "inherits": [
        "buildtype-release",
        "compiler-clang",
        "conf-common"
      ]
    },
    {
      "name": "release-msvc",
      "inherits": [
        "buildtype-release",
        "compiler-msvc",
        "conf-common"
      ]
    }
  ],
  "buildPresets": [
    {
      "name": "debug-gcc",
      "configurePreset": "debug-gcc"
    },
    {
      "name": "debug-clang",
      "configurePreset": "debug-clang"
    },
    {
      "name": "debug-msvc",
      "configurePreset": "debug-msvc"
    },
    {
      "name": "release-gcc",
      "configurePreset": "release-gcc"
    },
    {
      "name": "release-clang",
      "configurePreset": "release-clang"
    },
    {
      "name": "release-msvc",
      "configurePreset": "release-msvc"
    }
  ],
  "testPresets": [
    {
      "name": "debug-gcc",
      "configurePreset": "debug-gcc",
      "output": {
        "outputOnFailure": true
      }
    },
    {
      "name": "debug-clang",
      "configurePreset": "debug-clang",
      "output": {
        "outputOnFailure": true
      }
    }
  ]
}
